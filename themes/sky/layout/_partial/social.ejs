<footer class="footer-social">
    <% if (config.github_username) { %>
    <a class="social-link" target="_blank" href="https://github.com/<%= config.github_username %>">
        <i class="iconfont icon-github"></i>
    </a>
    <% } %>

    <% if (config.zhihu_username) { %>
    <a class="social-link" target="_blank" href="https://www.zhihu.com/people/<%= config.zhihu_username %>">
        <i class="iconfont icon-zhihu"></i>
    </a>
    <% } %>

    <% if (config.weibo_username) { %>
    <a class="social-link" target="_blank" href="http://weibo.com/<%= config.weibo_username %>">
        <i class="iconfont icon-weibo"></i>
    </a>
    <% } %>

    <div class="footer-copyright">
        <p class="time-line">
            Copyright
            &copy;
            <% current = date(Date.now(), 'YYYY') %>
            <% if (config.since && config.since < current) { %>
                <%- config.since %> -
            <% } %>
            <%- current %>
<!--
            &nbsp;<i class="iconfont icon-heart"></i>&nbsp;
-->
            <a target="_blank" href="https://i.cnury.cn"><%- config.author %></a>
            All rights reserved.
        </p>
        <p class="theme-info">
            Made with â™¥ by <a target="_blank" href="https://cnury.cn">Cnury Community</a>.
        </p>
    </div>
</footer>